<article class="post">
    <a href="{link}" class="poster">
        <img src="{poster}" alt="">
    </a>
    <div class="post_info">
        <h3><a href="{link}">{title}</a></h3>
        <div class="news_description">{description}</div>
        <ul class="news_stat">
            <li class="date">{date}</li>
            <li class="see">{see}</li>
        </ul>
    </div>
</article>