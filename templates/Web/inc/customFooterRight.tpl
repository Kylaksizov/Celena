<article class="news_min">
    <a href="{link}" class="poster">
        <img src="{poster}" alt="{title}">
    </a>
    <div class="news_info">
        <h3><a href="{link}">{title}</a></h3>
        <div class="news_description">{description limit="100"}</div>
        <ul class="news_stat">
            <li class="date">{date}</li>
            <li class="see">{see}</li>
        </ul>
    </div>
</article>